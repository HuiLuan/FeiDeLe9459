@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("SignOut", "Default", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            hello, @User.Identity.Name
          </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Sign Out</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign Up", "SignUp", "Default", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Default", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
